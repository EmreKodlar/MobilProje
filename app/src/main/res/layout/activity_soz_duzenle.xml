<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.sozDuzenle">


    <EditText
        android:id="@+id/sozYaziAl"
        android:layout_width="297dp"
        android:layout_height="187dp"
        android:layout_marginTop="64dp"

        android:gravity="top"

        android:hint="Beğendiğiniz Sözü Ekleyin..."
        android:inputType="textMultiLine"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sozYazarAl"
        android:layout_width="299dp"
        android:layout_height="43dp"
        android:layout_marginTop="30dp"

        android:hint="Yazar ismi..."
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sozYaziAl" />


    <Button
        android:id="@+id/duzenleSoz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="SÖZÜ DEĞİŞTİR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sozYazarAl" />

</androidx.constraintlayout.widget.ConstraintLayout>